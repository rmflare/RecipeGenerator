<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.dtcc.cis282student.recipegenerator">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MenuActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".CategoryListActivity"
            android:label="@string/categories_label"/>
        <activity android:name=".IngredientListActivity"
            android:label="@string/ingredients_label"/>
        <activity android:name=".FavRecipeListActivity" />
        <activity android:name=".RecipeListActivity" />
    </application>

</manifest>