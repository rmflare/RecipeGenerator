<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_categories"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context=".CategoryListActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary">

        <TextView
            android:id="@+id/toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="34sp"
            android:textColor="@color/white"
            android:text="@string/categories_title"/>

    </android.support.v7.widget.Toolbar>

    <GridLayout
        android:columnCount="4"
        android:rowCount="5"
        style="@style/GridLayout">

        <ImageButton
            android:id="@+id/btn_categories_meat"
            android:layout_column="1"
            android:layout_row="1"
            android:src="@drawable/ic_meat"
            style="@style/Button.Grid" />

        <ImageButton
            android:id="@+id/btn_categories_veg"
            android:layout_column="2"
            android:layout_row="1"
            android:src="@drawable/ic_vegetable"
            style="@style/Button.Grid" />

        <ImageButton
            android:id="@+id/btn_categories_fruit"
            android:layout_column="3"
            android:layout_row="1"
            android:src="@drawable/ic_fruit"
            style="@style/Button.Grid" />

        <ImageButton
            android:id="@+id/btn_categories_dairy"
            android:layout_column="1"
            android:layout_row="2"
            android:src="@drawable/ic_dairy"
            style="@style/Button.Grid" />

        <ImageButton
            android:id="@+id/btn_categories_nut"
            android:layout_column="2"
            android:layout_row="2"
            android:src="@drawable/ic_nut"
            style="@style/Button.Grid" />

        <ImageButton
            android:id="@+id/btn_categories_grain"
            android:layout_column="3"
            android:layout_row="2"
            android:src="@drawable/ic_grain"
            style="@style/Button.Grid" />

        <ImageButton
            android:id="@+id/btn_categories_sea"
            android:layout_column="1"
            android:layout_row="3"
            android:src="@drawable/ic_seafood"
            style="@style/Button.Grid" />

        <ImageButton
            android:id="@+id/btn_categories_seasoning"
            android:layout_column="2"
            android:layout_row="3"
            android:src="@drawable/ic_seasoning"
            style="@style/Button.Grid" />

        <ImageButton
            android:id="@+id/btn_categories_oil"
            android:layout_column="3"
            android:layout_row="3"
            android:src="@drawable/ic_oil"
            style="@style/Button.Grid" />

        <ImageButton
            android:id="@+id/btn_all_back"
            android:layout_column="1"
            android:layout_row="4"
            android:src="@drawable/ic_back"
            style="@style/Button.Back" />

        <ImageButton
            android:id="@+id/btn_all_clear"
            android:layout_column="2"
            android:layout_row="4"
            android:src="@drawable/ic_clear"
            style="@style/Button.Clear" />

        <ImageButton
            android:id="@+id/btn_categories_find"
            android:layout_column="3"
            android:layout_row="4"
            android:text="@string/categories_find"
            android:src="@drawable/ic_forward"
            style="@style/Button.Forward" />

    </GridLayout>

</LinearLayout>
