<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_favorites"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/activity_vertical_margin"
    android:gravity="center"
    tools:context=".ui.FavRecipeListActivity">

    <TextView
        android:id="@id/tv_favorites_title"
        android:text="@string/favorites_title"
        style="@style/title_textview" />

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:columnCount="4"
        android:rowCount="5">

        <Button
            android:id="@id/btn_favorites_fav1"
            android:layout_column="1"
            android:layout_row="1"
            android:background="@color/pastelBlue"
            style="@style/grid_button" />

        <Button
            android:id="@id/btn_favorites_fav2"
            android:layout_column="2"
            android:layout_row="1"
            android:background="@color/pastelBlue"
            style="@style/grid_button" />

        <Button
            android:id="@id/btn_favorites_fav3"
            android:layout_column="3"
            android:layout_row="1"
            android:background="@color/pastelBlue"
            style="@style/grid_button" />

        <Button
            android:id="@id/btn_favorites_fav4"
            android:layout_column="1"
            android:layout_row="2"
            android:background="@color/pastelBlue"
            style="@style/grid_button" />

        <Button
            android:id="@id/btn_favorites_fav5"
            android:layout_column="2"
            android:layout_row="2"
            android:background="@color/pastelBlue"
            style="@style/grid_button" />

        <Button
            android:id="@id/btn_favorites_fav6"
            android:layout_column="3"
            android:layout_row="2"
            android:background="@color/pastelBlue"
            style="@style/grid_button" />

        <Button
            android:id="@id/btn_favorites_fav7"
            android:layout_column="1"
            android:layout_row="3"
            android:background="@color/pastelBlue"
            style="@style/grid_button" />

        <Button
            android:id="@id/btn_favorites_fav8"
            android:layout_column="2"
            android:layout_row="3"
            android:background="@color/pastelBlue"
            style="@style/grid_button" />

        <Button
            android:id="@id/btn_favorites_fav9"
            android:layout_column="3"
            android:layout_row="3"
            android:background="@color/pastelBlue"
            style="@style/grid_button" />

    </GridLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:orientation="horizontal">

        <Button
            android:id="@id/btn_all_back"
            android:text="@string/all_back"
            android:layout_marginEnd="55dp"
            style="@style/nav_button"/>

        <Button
            android:id="@id/btn_favorites_remove"
            android:text="@string/favorites_remove"
            android:layout_marginStart="55dp"
            style="@style/nav_button"/>

    </LinearLayout>

</LinearLayout>
