<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_favorites"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context=".FavRecipeListActivity">

    <TextView
        android:id="@id/tv_favorites_title"
        android:text="@string/favorites_title"
        style="@style/TitleTextView" />

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:columnCount="4"
        android:rowCount="5">

        <Button
            android:id="@id/btn_favorites_1"
            android:layout_column="1"
            android:layout_row="1"
            style="@style/GridButton.Blue" />

        <Button
            android:id="@id/btn_favorites_2"
            android:layout_column="2"
            android:layout_row="1"
            style="@style/GridButton.Blue" />

        <Button
            android:id="@id/btn_favorites_3"
            android:layout_column="3"
            android:layout_row="1"
            style="@style/GridButton.Blue" />

        <Button
            android:id="@id/btn_favorites_4"
            android:layout_column="1"
            android:layout_row="2"
            style="@style/GridButton.Blue" />

        <Button
            android:id="@id/btn_favorites_5"
            android:layout_column="2"
            android:layout_row="2"
            style="@style/GridButton.Blue" />

        <Button
            android:id="@id/btn_favorites_6"
            android:layout_column="3"
            android:layout_row="2"
            style="@style/GridButton.Blue" />

        <Button
            android:id="@id/btn_favorites_7"
            android:layout_column="1"
            android:layout_row="3"
            style="@style/GridButton.Blue" />

        <Button
            android:id="@id/btn_favorites_8"
            android:layout_column="2"
            android:layout_row="3"
            style="@style/GridButton.Blue" />

        <Button
            android:id="@id/btn_favorites_9"
            android:layout_column="3"
            android:layout_row="3"
            style="@style/GridButton.Blue" />

    </GridLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:orientation="horizontal">

        <Button
            android:id="@id/btn_all_back"
            android:text="@string/all_back"
            android:layout_marginEnd="55dp"
            style="@style/NavigationButton"/>

        <Button
            android:id="@id/btn_favorites_remove"
            android:text="@string/favorites_remove"
            android:layout_marginStart="55dp"
            style="@style/NavigationButton"/>

    </LinearLayout>

</LinearLayout>
