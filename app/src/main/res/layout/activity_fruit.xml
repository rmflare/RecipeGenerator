<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_fruit"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context=".FruitListActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary">

        <TextView
            android:id="@+id/toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="34sp"
            android:textColor="@color/white"
            android:text="@string/fruit_title" />

    </android.support.v7.widget.Toolbar>

    <GridLayout
        android:columnCount="4"
        android:rowCount="5"
        style="@style/GridLayout">

        <Button
            android:id="@+id/btn_fruit_1"
            android:layout_column="1"
            android:layout_row="1"
            android:text="@string/fruit_1"
            style="@style/Button.Grid" />

        <Button
            android:id="@+id/btn_fruit_2"
            android:layout_column="2"
            android:layout_row="1"
            android:text="@string/fruit_2"
            style="@style/Button.Grid" />

        <Button
            android:id="@+id/btn_fruit_3"
            android:layout_column="3"
            android:layout_row="1"
            android:text="@string/fruit_3"
            style="@style/Button.Grid" />

        <Button
            android:id="@+id/btn_fruit_4"
            android:layout_column="1"
            android:layout_row="2"
            android:text="@string/fruit_4"
            style="@style/Button.Grid" />

        <Button
            android:id="@+id/btn_fruit_5"
            android:layout_column="2"
            android:layout_row="2"
            android:text="@string/fruit_5"
            style="@style/Button.Grid" />

        <Button
            android:id="@+id/btn_fruit_6"
            android:layout_column="3"
            android:layout_row="2"
            android:text="@string/fruit_6"
            style="@style/Button.Grid" />

        <Button
            android:id="@+id/btn_fruit_7"
            android:layout_column="1"
            android:layout_row="3"
            android:text="@string/fruit_7"
            style="@style/Button.Grid" />

        <Button
            android:id="@+id/btn_fruit_8"
            android:layout_column="2"
            android:layout_row="3"
            android:text="@string/fruit_8"
            style="@style/Button.Grid" />

        <Button
            android:id="@+id/btn_fruit_9"
            android:layout_column="3"
            android:layout_row="3"
            android:text="@string/fruit_9"
            style="@style/Button.Grid" />

        <ImageButton
            android:id="@+id/btn_all_back"
            android:layout_column="1"
            android:layout_row="4"
            android:src="@drawable/ic_back"
            style="@style/Button.Back" />

        <ImageButton
            android:id="@+id/btn_all_clear"
            android:layout_column="2"
            android:layout_row="4"
            android:src="@drawable/ic_clear"
            style="@style/Button.Clear" />

    </GridLayout>

</LinearLayout>
