<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_fruit"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center"
    tools:context=".FruitListActivity">

    <TextView
        android:id="@id/tv_fruit_title"
        android:text="@string/fruit_title"
        style="@style/TitleTextView" />

    <GridLayout
        android:columnCount="4"
        android:rowCount="5"
        style="@style/GridLayout">

        <Button
            android:id="@id/btn_dairy_1"
            android:layout_column="1"
            android:layout_row="1"
            android:text="Cherry"
            style="@style/GridButton" />

        <Button
            android:id="@id/btn_dairy_2"
            android:layout_column="2"
            android:layout_row="1"
            android:text="Watermelon"
            style="@style/GridButton" />

        <Button
            android:id="@id/btn_dairy_3"
            android:layout_column="3"
            android:layout_row="1"
            android:text="Cantaloupe"
            style="@style/GridButton" />

        <Button
            android:id="@id/btn_dairy_4"
            android:layout_column="1"
            android:layout_row="2"
            android:text="Grape"
            style="@style/GridButton" />

        <Button
            android:id="@id/btn_dairy_5"
            android:layout_column="2"
            android:layout_row="2"
            android:text="Orange"
            style="@style/GridButton" />

        <Button
            android:id="@id/btn_dairy_6"
            android:layout_column="3"
            android:layout_row="2"
            android:text="Lemon"
            style="@style/GridButton" />

        <Button
            android:id="@id/btn_dairy_7"
            android:layout_column="1"
            android:layout_row="3"
            android:text="Strawberry"
            style="@style/GridButton" />

        <Button
            android:id="@id/btn_dairy_8"
            android:layout_column="2"
            android:layout_row="3"
            android:text="Banana"
            style="@style/GridButton" />

        <Button
            android:id="@id/btn_dairy_9"
            android:layout_column="3"
            android:layout_row="3"
            android:text="Apple"
            style="@style/GridButton" />

        <Button
            android:id="@id/btn_all_back"
            android:layout_column="1"
            android:layout_row="4"
            android:text="@string/all_back"
            style="@style/NavigationButton" />

        <Button
            android:id="@id/btn_all_clear"
            android:layout_column="3"
            android:layout_row="4"
            android:text="@string/all_clear"
            style="@style/NavigationButton" />

    </GridLayout>

</LinearLayout>
