<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_grain"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center"
    tools:context=".GrainListActivity">

    <TextView
        android:id="@id/tv_grain_title"
        android:text="@string/grain_title"
        style="@style/TitleTextView" />

    <GridLayout
        android:columnCount="4"
        android:rowCount="5"
        style="@style/GridLayout">

        <Button
            android:id="@+id/btn_grain_1"
            android:layout_column="1"
            android:layout_row="1"
            android:text="Flour"
            style="@style/GridButton" />

        <Button
            android:id="@+id/btn_grain_2"
            android:layout_column="2"
            android:layout_row="1"
            android:text="Rice"
            style="@style/GridButton" />

        <Button
            android:id="@+id/btn_grain_3"
            android:layout_column="3"
            android:layout_row="1"
            android:text="Corn\nTortilla"
            style="@style/GridButton" />

        <Button
            android:id="@+id/btn_grain_4"
            android:layout_column="1"
            android:layout_row="2"
            android:text="Bread"
            style="@style/GridButton" />

        <Button
            android:id="@+id/btn_grain_5"
            android:layout_column="2"
            android:layout_row="2"
            android:text="Pasta"
            style="@style/GridButton" />

        <Button
            android:id="@+id/btn_grain_6"
            android:layout_column="3"
            android:layout_row="2"
            android:text="Semolina"
            style="@style/GridButton" />

        <Button
            android:id="@+id/btn_grain_7"
            android:layout_column="1"
            android:layout_row="3"
            android:text="Cereal"
            style="@style/GridButton" />

        <Button
            android:id="@+id/btn_grain_8"
            android:layout_column="2"
            android:layout_row="3"
            android:text="Bagel"
            style="@style/GridButton" />

        <Button
            android:id="@+id/btn_grain_9"
            android:layout_column="3"
            android:layout_row="3"
            android:text="Pita"
            style="@style/GridButton" />

        <Button
            android:id="@id/btn_all_back"
            android:layout_column="1"
            android:layout_row="4"
            android:text="@string/all_back"
            style="@style/NavigationButton" />

        <Button
            android:id="@id/btn_all_clear"
            android:layout_column="3"
            android:layout_row="4"
            android:text="@string/all_clear"
            style="@style/NavigationButton" />

    </GridLayout>

</LinearLayout>
