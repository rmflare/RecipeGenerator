<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_meat"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center"
    tools:context=".MeatListActivity">

    <TextView
        android:id="@id/tv_meat_title"
        android:text="@string/meat_title"
        style="@style/TitleTextView" />

    <GridLayout
        android:columnCount="4"
        android:rowCount="5"
        style="@style/GridLayout">

        <Button
            android:id="@id/btn_meat_1"
            android:layout_column="1"
            android:layout_row="1"
            android:text="@string/meat_1"
            style="@style/GridButton" />

        <Button
            android:id="@id/btn_meat_2"
            android:layout_column="2"
            android:layout_row="1"
            android:text="@string/meat_2"
            style="@style/GridButton" />

        <Button
            android:id="@id/btn_meat_3"
            android:layout_column="3"
            android:layout_row="1"
            android:text="@string/meat_3"
            style="@style/GridButton" />

        <Button
            android:id="@id/btn_meat_4"
            android:layout_column="1"
            android:layout_row="2"
            android:text="@string/meat_4"
            style="@style/GridButton" />

        <Button
            android:id="@id/btn_meat_5"
            android:layout_column="2"
            android:layout_row="2"
            android:text="@string/meat_5"
            style="@style/GridButton" />

        <Button
            android:id="@id/btn_meat_6"
            android:layout_column="3"
            android:layout_row="2"
            android:text="@string/meat_6"
            style="@style/GridButton" />

        <Button
            android:id="@id/btn_meat_7"
            android:layout_column="1"
            android:layout_row="3"
            android:text="@string/meat_7"
            style="@style/GridButton" />

        <Button
            android:id="@id/btn_meat_8"
            android:layout_column="2"
            android:layout_row="3"
            android:text="@string/meat_8"
            style="@style/GridButton" />

        <Button
            android:id="@id/btn_meat_9"
            android:layout_column="3"
            android:layout_row="3"
            android:text="@string/meat_9"
            style="@style/GridButton" />

        <Button
            android:id="@id/btn_all_back"
            android:layout_column="1"
            android:layout_row="4"
            android:text="@string/all_back"
            style="@style/NavigationButton" />

        <Button
            android:id="@id/btn_all_clear"
            android:layout_column="3"
            android:layout_row="4"
            android:text="@string/all_clear"
            style="@style/NavigationButton" />

    </GridLayout>

</LinearLayout>
