<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_oil"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center"
    tools:context=".OilListActivity">

    <TextView
        android:text="@string/oil_title"
        style="@style/TitleTextView" />

    <GridLayout
        android:columnCount="4"
        android:rowCount="5"
        style="@style/GridLayout">

        <Button
            android:id="@+id/btn_oil_1"
            android:layout_column="1"
            android:layout_row="1"
            android:text="Olive\nOil"
            style="@style/GridButton" />

        <Button
            android:id="@+id/btn_oil_2"
            android:layout_column="2"
            android:layout_row="1"
            android:text="Canola\nOil"
            style="@style/GridButton" />

        <Button
            android:id="@+id/btn_oil_3"
            android:layout_column="3"
            android:layout_row="1"
            android:text="Vegetable\nOil"
            style="@style/GridButton" />

        <Button
            android:id="@+id/btn_oil_4"
            android:layout_column="1"
            android:layout_row="2"
            android:text="Peanut\nOil"
            style="@style/GridButton" />

        <Button
            android:id="@+id/btn_oil_5"
            android:layout_column="2"
            android:layout_row="2"
            android:text="Cooking\nSpray"
            style="@style/GridButton" />

        <Button
            android:id="@+id/btn_oil_6"
            android:layout_column="3"
            android:layout_row="2"
            android:text="Shortening"
            style="@style/GridButton" />

        <Button
            android:id="@+id/btn_oil_7"
            android:layout_column="1"
            android:layout_row="3"
            android:text="Red Pepper\nSauce"
            style="@style/GridButton" />

        <Button
            android:id="@+id/btn_oil_8"
            android:layout_column="2"
            android:layout_row="3"
            android:text="Tomato\nPaste"
            style="@style/GridButton" />

        <Button
            android:id="@+id/btn_oil_9"
            android:layout_column="3"
            android:layout_row="3"
            android:text="Tomato\nSauce"
            style="@style/GridButton" />

        <Button
            android:id="@id/btn_all_back"
            android:layout_column="1"
            android:layout_row="4"
            android:text="@string/all_back"
            style="@style/NavigationButton" />

        <Button
            android:id="@id/btn_all_clear"
            android:layout_column="3"
            android:layout_row="4"
            android:text="@string/all_clear"
            style="@style/NavigationButton" />

    </GridLayout>

</LinearLayout>
