<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_output"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context=".RecipeListActivity">

    <TextView
        android:id="@id/tv_output_title"
        android:text="@string/output_title"
        style="@style/TitleTextView" />

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:columnCount="4"
        android:rowCount="5">

        <Button
            android:id="@id/btn_output_1"
            android:layout_column="1"
            android:layout_row="1"
            style="@style/GridButton.Purple"/>

        <Button
            android:id="@id/btn_output_2"
            android:layout_column="2"
            android:layout_row="1"
            style="@style/GridButton.Purple"/>

        <Button
            android:id="@id/btn_output_3"
            android:layout_column="3"
            android:layout_row="1"
            style="@style/GridButton.Purple"/>

        <Button
            android:id="@id/btn_output_4"
            android:layout_column="1"
            android:layout_row="2"
            style="@style/GridButton.Purple"/>

        <Button
            android:id="@id/btn_output_5"
            android:layout_column="2"
            android:layout_row="2"
            style="@style/GridButton.Purple" />

        <Button
            android:id="@id/btn_output_6"
            android:layout_column="3"
            android:layout_row="2"
            style="@style/GridButton.Purple" />

        <Button
            android:id="@id/btn_output_7"
            android:layout_column="1"
            android:layout_row="3"
            style="@style/GridButton.Purple" />

        <Button
            android:id="@id/btn_output_8"
            android:layout_column="2"
            android:layout_row="3"
            style="@style/GridButton.Purple" />

        <Button
            android:id="@id/btn_output_9"
            android:layout_column="3"
            android:layout_row="3"
            style="@style/GridButton.Purple" />

        <Button
            android:id="@id/btn_all_back"
            android:text="@string/all_back"
            android:layout_column="2"
            android:layout_row="4"
            style="@style/NavigationButton" />

    </GridLayout>

</LinearLayout>
