<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_sea"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center"
    tools:context=".SeafoodListActivity">

    <TextView
        android:text="@string/sea_title"
        style="@style/TitleTextView" />

    <GridLayout
        android:columnCount="4"
        android:rowCount="5"
        style="@style/GridLayout">

        <Button
            android:id="@+id/btn_sea_1"
            android:layout_column="1"
            android:layout_row="1"
            android:text="Salmon"
            style="@style/GridButton" />

        <Button
            android:id="@+id/btn_sea_2"
            android:layout_column="2"
            android:layout_row="1"
            android:text="Trout"
            style="@style/GridButton" />

        <Button
            android:id="@+id/btn_sea_3"
            android:layout_column="3"
            android:layout_row="1"
            android:text="Sea Bass"
            style="@style/GridButton" />

        <Button
            android:id="@+id/btn_sea_4"
            android:layout_column="1"
            android:layout_row="2"
            android:text="Shrimp"
            style="@style/GridButton" />

        <Button
            android:id="@+id/btn_sea_5"
            android:layout_column="2"
            android:layout_row="2"
            android:text="Tuna"
            style="@style/GridButton" />

        <Button
            android:id="@+id/btn_sea_6"
            android:layout_column="3"
            android:layout_row="2"
            android:text="Tilapia"
            style="@style/GridButton" />

        <Button
            android:id="@+id/btn_sea_7"
            android:layout_column="1"
            android:layout_row="3"
            android:text="Halibut"
            style="@style/GridButton" />

        <Button
            android:id="@+id/btn_sea_8"
            android:layout_column="2"
            android:layout_row="3"
            android:text="Mackerel"
            style="@style/GridButton" />

        <Button
            android:id="@+id/btn_sea_9"
            android:layout_column="3"
            android:layout_row="3"
            android:text="Anchovy"
            style="@style/GridButton" />

        <Button
            android:id="@id/btn_all_back"
            android:layout_column="1"
            android:layout_row="4"
            android:text="@string/all_back"
            style="@style/NavigationButton" />

        <Button
            android:id="@id/btn_all_clear"
            android:layout_column="3"
            android:layout_row="4"
            android:text="@string/all_clear"
            style="@style/NavigationButton" />

    </GridLayout>

</LinearLayout>
