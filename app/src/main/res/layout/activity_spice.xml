<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_spice"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center"
    tools:context=".SpiceListActivity">

    <TextView
        android:id="@id/tv_spice_title"
        android:text="@string/spice_title"
        style="@style/TitleTextView" />

    <GridLayout
        android:columnCount="4"
        android:rowCount="5"
        style="@style/GridLayout">

        <Button
            android:id="@+id/btn_spice_1"
            android:layout_column="1"
            android:layout_row="1"
            android:text="Salt"
            style="@style/GridButton" />

        <Button
            android:id="@+id/btn_spice_2"
            android:layout_column="2"
            android:layout_row="1"
            android:text="Black\nPepper"
            style="@style/GridButton" />

        <Button
            android:id="@+id/btn_spice_3"
            android:layout_column="3"
            android:layout_row="1"
            android:text="Basil"
            style="@style/GridButton" />

        <Button
            android:id="@+id/btn_spice_4"
            android:layout_column="1"
            android:layout_row="2"
            android:text="Parsley"
            style="@style/GridButton" />

        <Button
            android:id="@+id/btn_spice_5"
            android:layout_column="2"
            android:layout_row="2"
            android:text="Oregano"
            style="@style/GridButton" />

        <Button
            android:id="@+id/btn_spice_6"
            android:layout_column="3"
            android:layout_row="2"
            android:text="Cumin"
            style="@style/GridButton" />

        <Button
            android:id="@+id/btn_spice_7"
            android:layout_column="1"
            android:layout_row="3"
            android:text="Chili\nPowder"
            style="@style/GridButton" />

        <Button
            android:id="@+id/btn_spice_8"
            android:layout_column="2"
            android:layout_row="3"
            android:text="Garlic\nPowder"
            style="@style/GridButton" />

        <Button
            android:id="@+id/btn_spice_9"
            android:layout_column="3"
            android:layout_row="3"
            android:text="Onion\nPowder"
            style="@style/GridButton" />

        <Button
            android:id="@id/btn_all_back"
            android:layout_column="1"
            android:layout_row="4"
            android:text="@string/all_back"
            style="@style/NavigationButton" />

        <Button
            android:id="@id/btn_all_clear"
            android:layout_column="3"
            android:layout_row="4"
            android:text="@string/all_clear"
            style="@style/NavigationButton" />

    </GridLayout>

</LinearLayout>
