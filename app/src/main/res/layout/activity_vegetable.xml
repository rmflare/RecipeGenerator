<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_vegetable"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center"
    tools:context=".VegetableListActivity">

    <TextView
        android:id="@id/tv_veg_title"
        android:text="@string/veg_title"
        style="@style/TitleTextView" />

    <GridLayout
        android:columnCount="4"
        android:rowCount="5"
        style="@style/GridLayout">

        <Button
            android:id="@id/btn_veg_1"
            android:layout_column="1"
            android:layout_row="1"
            android:text="@string/veg_1"
            style="@style/GridButton" />

        <Button
            android:id="@id/btn_veg_2"
            android:layout_column="2"
            android:layout_row="1"
            android:text="@string/veg_2"
            style="@style/GridButton" />

        <Button
            android:id="@id/btn_veg_3"
            android:layout_column="3"
            android:layout_row="1"
            android:text="@string/veg_3"
            style="@style/GridButton" />

        <Button
            android:id="@id/btn_veg_4"
            android:layout_column="1"
            android:layout_row="2"
            android:text="@string/veg_4"
            style="@style/GridButton" />

        <Button
            android:id="@id/btn_veg_5"
            android:layout_column="2"
            android:layout_row="2"
            android:text="@string/veg_5"
            style="@style/GridButton" />

        <Button
            android:id="@id/btn_veg_6"
            android:layout_column="3"
            android:layout_row="2"
            android:text="@string/veg_6"
            style="@style/GridButton" />

        <Button
            android:id="@id/btn_veg_7"
            android:layout_column="1"
            android:layout_row="3"
            android:text="@string/veg_7"
            style="@style/GridButton" />

        <Button
            android:id="@id/btn_veg_8"
            android:layout_column="2"
            android:layout_row="3"
            android:text="@string/veg_8"
            style="@style/GridButton" />

        <Button
            android:id="@id/btn_veg_9"
            android:layout_column="3"
            android:layout_row="3"
            android:text="@string/veg_9"
            style="@style/GridButton" />

        <Button
            android:id="@id/btn_all_back"
            android:layout_column="1"
            android:layout_row="4"
            android:text="@string/all_back"
            style="@style/NavigationButton" />

        <Button
            android:id="@id/btn_all_clear"
            android:layout_column="3"
            android:layout_row="4"
            android:text="@string/all_clear"
            style="@style/NavigationButton" />

    </GridLayout>

</LinearLayout>
