<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorBackground">@color/colorBackground</item>
        <item name="android:navigationBarColor">@color/green_dark</item>
        <item name="android:statusBarColor">@color/green_dark</item>
    </style>

    <!-- popup window -->
    <style name="AppTheme.PopupTheme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
    </style>

    <!-- buttons -->
    <style name="Button">
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">22sp</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="Button.Grid">
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">150dp</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:background">@drawable/grid_button_states</item>
    </style>

    <style name="Button.Navigation">
        <item name="android:layout_width">120dp</item>
        <item name="android:layout_height">110dp</item>
        <item name="android:layout_marginTop">50dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:background">@drawable/nav_button_states</item>
    </style>

    <style name="Button.Menu">
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">150dp</item>
        <item name="android:background">@drawable/grid_button_states</item>
    </style>

    <style name="Button.Back">
        <item name="android:layout_width">120dp</item>
        <item name="android:layout_height">110dp</item>
        <item name="android:layout_marginTop">50dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:background">@drawable/back_button_states</item>
    </style>

    <style name="Button.Clear">
        <item name="android:layout_width">120dp</item>
        <item name="android:layout_height">110dp</item>
        <item name="android:layout_marginTop">50dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:background">@drawable/clear_button_states</item>
    </style>

    <style name="Button.Forward">
        <item name="android:layout_width">120dp</item>
        <item name="android:layout_height">110dp</item>
        <item name="android:layout_marginTop">50dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:background">@drawable/forward_button_states</item>
    </style>

    <style name="GridLayout">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">80dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">15dp</item>
        <item name="android:background">@drawable/layout_grid</item>
    </style>

</resources>
