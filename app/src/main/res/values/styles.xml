<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorBackground">@color/colorBackground</item>
        <item name="android:navigationBarColor">@color/green_dark</item>
        <item name="android:statusBarColor">@color/green_dark</item>
    </style>

    <!-- popup window -->
    <style name="AppTheme.PopupTheme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
    </style>

    <!-- navigation buttons -->
    <style name="NavigationButton">
        <item name="android:layout_width">120dp</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:layout_marginTop">50dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">22sp</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:background">@drawable/button_nav</item>
    </style>

    <style name="ClearButton">
        <item name="android:layout_width">120dp</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:layout_marginTop">50dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">22sp</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:background">@drawable/button_clear</item>
    </style>

    <!-- grid buttons -->
    <style name="GridButton">
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">150dp</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">22sp</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:background">@drawable/button_grid</item>
    </style>

    <style name="GridLayout">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:radius">15dp</item>
        <item name="android:padding">15dp</item>
        <item name="android:background">@drawable/layout_grid</item>
    </style>

    <!-- title textview -->
    <style name="TitleTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">50dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">34sp</item>
        <item name="android:textColor">@color/black</item>
    </style>-->

</resources>
